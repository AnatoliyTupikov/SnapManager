<Window x:Name="NWindow" x:Class="SnapManager.Views.WPF.NestedOrRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapManager.Views.WPF"
        mc:Ignorable="d"
        Title="AddCredsOrFolderWindow" Height="219" Width="399" WindowStyle="None" ResizeMode="NoResize" BorderBrush="Black" BorderThickness="0.5">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Button Content="+ Add an item in root directory" HorizontalAlignment="Left" Margin="29,62,0,0" VerticalAlignment="Top" Height="45" Width="331" BorderBrush="#FFE4E2E2" Click="Root_Click"/>
        <Button Content="+ Add a nested item" HorizontalAlignment="Left" Margin="29,112,0,0" VerticalAlignment="Top" Height="45" Width="331" BorderBrush="#FFE4E2E2" Click="Nested_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="336,184,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Please choose whether to create a sub entry or a new entry." HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
