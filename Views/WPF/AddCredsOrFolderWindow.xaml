<Window x:Class="SnapManager.Views.WPF.AddCredsOrFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapManager.Views.WPF"
        mc:Ignorable="d"
        Title="AddCredsOrFolderWindow" Height="200" Width="270" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="10,0,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Button Content="+ Add a new credentials" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" Height="45" Width="220"/>
        <Button Content="+ Add a new folder" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Height="45" Width="220"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="193,162,0,0" VerticalAlignment="Top"/>
        <Label Content="Please choose whether to creare" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
