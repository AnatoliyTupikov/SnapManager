@{
    ViewBag.ShowNavigation = false;
}
@section Title{
    Configuration
}

<style>
    main{
        
        display: flex;
        flex-direction: row;        
        align-items: stretch;
        justify-content: stretch;

    }
    
    .left-menu {
        flex: 0 0 305px;
        display: flex;
        flex-direction: column;          
        background-color: #606060;
        color: #E0E0E0;
        padding-left: 30px;
        padding-top: 20px;
        box-sizing: border-box;
    
    }

    .leave-button{
        margin-top: auto;
        margin-bottom: 20px;
        cursor: pointer;
        
    }    

    .leave-button:hover h3{
        text-decoration: underline;
        }
       
</style>

<main>
    <div class="left-menu">
        <h3>Database settings</h3>
        <h3>Feedback</h3>
        <div class="leave-button">
            <a href="@Url.Action("Index", "Home")" style="text-decoration: none; color: inherit;">
                <h3>Back to Home</h3>
            </a>            
        </div>
    </div>
    
    <div class="content">
        @RenderBody()
    </div>
</main>
